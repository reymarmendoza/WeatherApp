<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.MainActivity">

    <TextView
        android:text="@string/MaxTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/MinTemperature"
        android:layout_alignStart="@+id/MinTemperature"
        android:id="@+id/MaxTemperature" />

    <TextView
        android:text="@string/weatherPhase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="73dp"
        android:drawableTop="@android:drawable/btn_star_big_on"
        android:id="@+id/weatherPhase"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/MinTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MinTemperature"
        android:layout_alignBaseline="@+id/weatherPhase"
        android:layout_alignBottom="@+id/weatherPhase"
        android:layout_alignEnd="@+id/ActualWeather"
        android:layout_marginEnd="32dp" />

    <TextView
        android:text="@string/ActualWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="57dp"
        android:id="@+id/ActualWeather"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
